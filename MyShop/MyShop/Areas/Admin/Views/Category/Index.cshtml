@model List<Category>
@{
    int count = 1;
    ViewData["Title"] = "Category";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                IsDeleted
                            </th>
                            <th>
                                Settings
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                     @foreach (Category category in Model)
                    {
                    <tr>
                            <td >
                                @count
                            </td>
                            <td>
                               @category.Name
                            </td>
                            <td>
                                @category.ImagePath
                            </td>
                            <td>
                                <a class="btn btn-btn-warning"> Edit</a>
                                <a class="btn btn-btn-danger"> Delete</a>
                            </td>

                        </tr>
                        count++;

                    }
                            
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
